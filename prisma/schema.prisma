generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:./dev.db"
}

enum Priority {
    LOW
    MEDIUM
    HIGH
    URGENT
}

model User {
    id        String    @id @default(uuid())
    email     String    @unique
    fullName  String
    password  String
    createdAt DateTime  @default(now())
    updatedAt DateTime  @updatedAt
    deletedAt DateTime?

    columns Column[]
}

model Column {
    id     String @id @default(uuid())
    title  String
    userId String

    createdAt DateTime  @default(now())
    updatedAt DateTime  @updatedAt
    deletedAt DateTime?

    user User @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)

    tasks Task[]
}

model Task {
    id          String   @id @default(uuid())
    title       String
    description String?
    priority    Priority @default(MEDIUM)
    columnId    String

    createdAt DateTime  @default(now())
    updatedAt DateTime  @updatedAt
    deletedAt DateTime?

    column Column @relation(fields: [columnId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}
